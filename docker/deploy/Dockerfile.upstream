FROM eclipse-temurin:21-jdk AS build
WORKDIR /build
COPY . .
RUN ./gradlew :testserver:fatJar --no-daemon

FROM eclipse-temurin:21-jdk
WORKDIR /app

ENV JAVA_OPTS="-Xms256m -Xmx512m -XX:+UseG1GC -Dfile.encoding=UTF-8"

COPY --from=build /build/testserver/build/libs/testserver.jar testserver.jar
EXPOSE 3000 3001

ENTRYPOINT ["sh", "-c", "java $JAVA_OPTS -jar testserver.jar"]
